{
  "name": "autoai-chrome-extension",
  "version": "1.0.0",
  "description": "AI自動化Chrome拡張機能 - スプレッドシート連携で複数AIを並列処理",
  "type": "module",
  "main": "background.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "node scripts/build.js",
    "package": "cd dist && zip -r extension.zip build/*",
    "lint:syntax": "node --check step*.js background.js src/**/*.js automations/*.js 2>&1 || exit 1",
    "test": "npm run lint:syntax && echo '✅ Tests passed'"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "automation",
    "google-sheets",
    "chatgpt",
    "claude",
    "gemini"
  ],

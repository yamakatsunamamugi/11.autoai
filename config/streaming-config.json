{
  "system": {
    "name": "AutoAI Enterprise Streaming System",
    "version": "1.0.0",
    "environment": "production"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "transport": "console",
    "enableColors": true,
    "includeTimestamp": true,
    "includeLevel": true,
    "includeName": true,
    "includeStack": false,
    "maxFileSize": "10MB",
    "maxFiles": 5
  },
  "streaming": {
    "maxConcurrentWindows": 4,
    "windowLayout": "quadrant",
    "windowReuse": true,
    "taskTimeout": 300000,
    "retryDelay": 1000,
    "enableMetrics": true,
    "enableHealthCheck": true
  },
  "ai": {
    "supportedTypes": ["claude", "gemini", "chatgpt"],
    "urls": {
      "claude": "https://claude.ai/new",
      "gemini": "https://gemini.google.com/app",
      "chatgpt": "https://chatgpt.com/?model=gpt-4o",
      "chatgpt-o3": "https://chatgpt.com/?model=o3",
      "chatgpt-o3-pro": "https://chatgpt.com/?model=o3-pro"
    },
    "defaultModels": {
      "claude": "claude-3-5-sonnet",
      "gemini": "gemini-pro",
      "chatgpt": "gpt-4o"
    },
    "models": {
      "o3": {
        "url": "https://chatgpt.com/?model=o3",
        "description": "推論強化モデル",
        "timeout": 600000
      },
      "o3-pro": {
        "url": "https://chatgpt.com/?model=o3-pro",
        "description": "プロフェッショナル推論モデル",
        "timeout": 900000
      }
    }
  },
  "error": {
    "retry": {
      "maxAttempts": 3,
      "initialDelay": 1000,
      "backoffMultiplier": 2,
      "maxDelay": 30000,
      "enableJitter": true,
      "retryableErrors": [
        "NetworkError",
        "TimeoutError", 
        "ServiceUnavailable",
        "RateLimitError"
      ]
    },
    "circuitBreaker": {
      "enabled": true,
      "failureThreshold": 5,
      "timeout": 60000,
      "monitoringPeriod": 10000
    },
    "classification": {
      "critical": [
        "SecurityError",
        "AuthenticationError", 
        "AuthorizationError"
      ],
      "retriable": [
        "NetworkError",
        "TimeoutError",
        "ServiceUnavailable",
        "RateLimitError"
      ],
      "permanent": [
        "ValidationError",
        "NotFoundError",
        "BadRequestError"
      ]
    }
  },
  "security": {
    "enableSanitization": true,
    "maxRequestSize": "10MB",
    "allowedOrigins": [
      "chrome-extension://"
    ],
    "sensitiveKeys": [
      "auth.token",
      "security.",
      "credentials."
    ]
  },
  "performance": {
    "enableMetrics": true,
    "metricsInterval": 5000,
    "maxMemoryUsage": "500MB",
    "enableProfiling": false,
    "cacheSize": 1000
  },
  "window": {
    "defaultWidth": 960,
    "defaultHeight": 540,
    "positions": {
      "quadrant": [
        { "left": 0, "top": 0 },
        { "left": 0.5, "top": 0 },
        { "left": 0, "top": 0.5 },
        { "left": 0.5, "top": 0.5 }
      ],
      "linear": [
        { "left": 0, "top": 0 },
        { "left": 0.25, "top": 0 },
        { "left": 0.5, "top": 0 },
        { "left": 0.75, "top": 0 }
      ]
    },
    "animation": {
      "enableTransitions": true,
      "duration": 300,
      "easing": "ease-in-out"
    }
  },
  "auth": {
    "tokenRefreshInterval": 3600000,
    "maxRetries": 3,
    "interactiveMode": true,
    "autoRefresh": true
  },
  "plugins": {
    "enabled": [],
    "autoLoad": true,
    "searchPaths": [
      "../plugins/",
      "./plugins/"
    ],
    "allowedPlugins": [
      "CustomAIProvider",
      "AdvancedWindowManager",
      "MetricsCollector",
      "CustomLogger"
    ]
  },
  "debug": {
    "enabled": false,
    "verboseLogging": false,
    "preserveState": false,
    "enableDebugUI": false,
    "logSensitiveData": false
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "interval": 30000,
      "timeout": 5000
    },
    "metrics": {
      "collection": {
        "enabled": true,
        "interval": 5000,
        "retention": 86400000
      },
      "alerts": {
        "errorRate": {
          "threshold": 5.0,
          "enabled": true
        },
        "responseTime": {
          "threshold": 10000,
          "enabled": true
        },
        "memoryUsage": {
          "threshold": 80.0,
          "enabled": true
        }
      }
    }
  },
  "features": {
    "parallelStreaming": {
      "enabled": true,
      "wavePattern": true,
      "columnReuse": true
    },
    "answerFiltering": {
      "enabled": true,
      "skipExisting": true,
      "emptyMarkers": [
        "TODO",
        "PENDING",
        "-",
        "N/A",
        "未回答",
        "未処理",
        "処理中",
        "エラー",
        "ERROR"
      ]
    },
    "models": {
      "enabled": true,
      "autoDetection": true,
      "supportedModels": ["o3", "o3-pro"]
    }
  },
  "environments": {
    "development": {
      "logging": {
        "level": "debug",
        "format": "text"
      },
      "debug": {
        "enabled": true,
        "verboseLogging": true
      },
      "streaming": {
        "taskTimeout": 60000
      }
    },
    "testing": {
      "logging": {
        "level": "debug"
      },
      "streaming": {
        "maxConcurrentWindows": 2,
        "taskTimeout": 30000
      },
      "error": {
        "retry": {
          "maxAttempts": 1
        }
      }
    },
    "production": {
      "logging": {
        "level": "info",
        "format": "json"
      },
      "debug": {
        "enabled": false
      },
      "monitoring": {
        "healthCheck": {
          "interval": 10000
        }
      }
    }
  }
}
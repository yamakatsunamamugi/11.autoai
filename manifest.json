{
  "manifest_version": 3,
  "name": "AutoAI Minimal",
  "version": "1.0.0",
  "description": "最小限の機能から始めるAutoAI",
  "key": "",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "power",
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "system.display",
    "scripting",
    "windows",
    "downloads"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://docs.google.com/*",
    "https://www.googleapis.com/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://genspark.com/*",
    "https://www.genspark.ai/*",
    "https://api.dropboxapi.com/*",
    "https://content.dropboxapi.com/*",
    "https://www.dropbox.com/*"
  ],
  "oauth2": {
    "client_id": "262291163420-cfp8h5f7qqaljs2e9b0b1vje1pvpeeq1.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["common-error-handler.js", "4-2-claude-automation.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["common-error-handler.js", "4-1-chatgpt-automation.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["common-error-handler.js", "4-3-gemini-automation.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://genspark.com/*",
        "https://www.genspark.ai/*"
      ],
      "js": ["common-error-handler.js", "4-5-genspark-automation.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "step1-setup.js",
        "step2-taskgroup.js",
        "step3-tasklist.js",
        "common-error-handler.js",
        "4-1-chatgpt-automation.js",
        "4-2-claude-automation.js",
        "4-3-gemini-automation.js",
        "4-4-report-automation.js",
        "4-5-genspark-automation.js",
        "aitest/ai-test-controller.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
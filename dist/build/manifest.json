{
  "manifest_version": 3,
  "name": "AutoAI Minimal",
  "version": "1.0.0",
  "description": "最小限の機能から始めるAutoAI",
  "permissions": [
    "power",
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "system.display",
    "scripting",
    "windows",
    "downloads"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://docs.google.com/*",
    "https://www.googleapis.com/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://genspark.com/*",
    "https://www.genspark.ai/*",
    "https://api.dropboxapi.com/*",
    "https://content.dropboxapi.com/*",
    "https://www.dropbox.com/*"
  ],
  "oauth2": {
    "client_id": "262291163420-cfp8h5f7qqaljs2e9b0b1vje1pvpeeq1.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://genspark.com/*",
        "https://www.genspark.ai/*"
      ],
      "js": [
        "src/content/content-script-consolidated.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui-selectors-data.json",
        "src/config/ui-selectors-loader.js",
        "src/ui/ui.html",
        "src/ui/ui-controller.js",
        "src/services/auth-service.js",
        "src/services/dropbox-service.js",
        "src/config/dropbox-config.js",
        "src/features/spreadsheet/docs-client.js",
        "src/features/spreadsheet/sheets-client.js",
        "src/services/spreadsheet-auto-setup.js",
        "automations/chatgpt-automation.js",
        "automations/claude-automation.js",
        "automations/gemini-automation.js",
        "automations/2-4-genspark-automation.js",
        "automations/2-5-report-automation.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}